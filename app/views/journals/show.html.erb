
<% if @journal.content == nil %>

<h2><%= @journal.title %></h2>
<p><%= @journal.date %></p>
<p><%= @journal.content %></p>
  <% else %>
  <h2>Journal Entry</h2>
  <%= simple_form_for(@journal) do |f| %>

  <!-- [...] -->

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <!-- insert these three line of code below -->
  <div class="form-inputs">
    <%= f.rich_text_area :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<% end %>
