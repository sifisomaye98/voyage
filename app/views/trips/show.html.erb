<div class="container">
  <h2><%="Your trip budget is: R#{@trip.budget} " %></h2>
  <p><%= "start date #{@trip.start_date}" %></p>
  <p><%= "end date #{@trip.end_date}" %></p>
</div>

<div class="container">
  <% @packages.each do |package| %>
    <div class="card-packages">
      <h1> <%= Package.humanized_categories[package.category.to_sym]%> </h1>
      <p> <%= link_to package.name, package_path(package) %> </p>
      <%# package.picture - cloudinary as a carousel%>
      <%# package.category - name in the center %>
      <%# package.name - as a text p tag  %>
    </div>
  <% end %>
</div>
